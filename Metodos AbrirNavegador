

public class Browsers {

	       //Primeiro passo para realizar a abertura do navegador
	
	protected static WebDriver driver;
	
	public void abrirNavegador(String site) {
		
		try {
			System.setProperty("webdriver.chrome.driver", "C:\\Driver\\chromedriver.exe");
			driver = new ChromeDriver();
			driver.get(site);
			driver.manage().window().maximize();

		} catch (Exception e) {
			System.err.println("-----erro ao abrir navegador-----" + e.getMessage());
			System.err.println("-----causa do erro-----" + e.getMessage());
		}
	}
	
	
	//Elementos escrever
	
           	public void usuario(String texto, By elemento) {

		driver.findElement(elemento).sendKeys(texto);
	}

	public void senha(String texto, By elemento) {

		driver.findElement(elemento).sendKeys(texto);
	}
	public void nome(String texto, By elemento) {
		
		driver.findElement(elemento).sendKeys(texto);
        
	}public void cpf(String texto, By elemento) {
		
		driver.findElement(elemento).sendKeys(texto);
        
	}public void sexo(String texto, By elemento) {
		
		driver.findElement(elemento).sendKeys(texto);
        
	}public void admissao(String texto, By elemento) {
		
		driver.findElement(elemento).sendKeys(texto);
        
	}public void cargo(String texto, By elemento) {
		
		driver.findElement(elemento).sendKeys(texto);
        
	}public void salario(String texto, By elemento) {
		
		driver.findElement(elemento).sendKeys(texto);
        
	}public void tpDeContratacao(String texto, By elemento) {
		
		driver.findElement(elemento).sendKeys(texto);
        
	}
  
	
}
